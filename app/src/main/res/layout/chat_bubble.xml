<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/bubble_parent"
    android:orientation="vertical"
    android:gravity="right">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/bubble_child"
        android:background="@drawable/sent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="teste teste teste"
            android:gravity="left"
            android:maxEms="10"
            android:textColor="#000"
            android:id="@+id/txtMessage_ChatBubble"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right|bottom"
            android:textColor="@color/abc_background_cache_hint_selector_material_dark"
            android:layout_marginLeft="2dp"
            android:text="09:00"/>

    </LinearLayout>
</LinearLayout>
